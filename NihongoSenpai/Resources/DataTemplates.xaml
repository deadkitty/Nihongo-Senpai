<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone">

    <DataTemplate x:Key="PanoramaTitleTemplate">
        <TextBlock FontFamily="Comic Sans MS" Text="{Binding}" FontSize="100" Margin="0,20,0,0"/>
    </DataTemplate>
    
    <DataTemplate x:Key="PanoramaHeaderTemplate">
        <TextBlock FontFamily="Comic Sans MS" Text="{Binding}"/>
    </DataTemplate>
    
    <DataTemplate x:Key="ButtonContent">
        <TextBlock Text="{Binding}" TextWrapping="Wrap" TextAlignment="Center"/>
    </DataTemplate>
    
</ResourceDictionary>